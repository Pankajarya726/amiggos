<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:background="@drawable/linearlayout_dining_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingTop="@dimen/_15sdp"
        android:paddingRight="@dimen/_8sdp"
        android:paddingBottom="@dimen/_15sdp"
        app:layout_constraintBottom_toTopOf="@+id/cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:id="@+id/dinin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_dining_bg"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_dinin"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:drawablePadding="@dimen/_8sdp"
                android:textSize="@dimen/_12sdp"
                android:drawableLeft="@drawable/dining"
                android:gravity="center"
                android:text="Dining"
                android:textColor="@color/main_blue_color" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_8sdp"
            android:id="@+id/togo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_dining_bg"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_togo"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:drawablePadding="@dimen/_8sdp"
                android:textSize="@dimen/_12sdp"
                android:drawableLeft="@drawable/walk"
                android:gravity="center"
                android:text="To go"
                android:textColor="@color/main_blue_color" />

        </LinearLayout>



    </LinearLayout>

    <Button
        android:textAllCaps="true"
        android:id="@+id/cancel"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:background="@drawable/btn_dining_bg"
        android:text="Cancel"
        android:textColor="@color/main_blue_color"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:rippleColor="@android:color/black"
        tools:layout_editor_absoluteX="10dp" />


</androidx.constraintlayout.widget.ConstraintLayout>