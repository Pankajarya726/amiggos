<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/black"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/txt_step_one"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/header_logo" />

                <TextView
                    android:fontFamily="@font/opensans_regular"
                    android:id="@+id/txt_step_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="Step 2"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="20dp">

                    <EditText
                        android:fontFamily="@font/opensans_regular"
                        android:id="@+id/tfirstname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:backgroundTint="@android:color/white"
                        android:hint="First Name"
                        android:inputType="text|textCapWords"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white" />

                    <EditText
                        android:fontFamily="@font/opensans_regular"
                        android:id="@+id/tlastname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:backgroundTint="@android:color/white"
                        android:hint="Last Name"
                        android:inputType="text|textCapWords"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white" />

                    <EditText
                        android:fontFamily="@font/opensans_regular"
                        android:clickable="false"
                        android:id="@+id/tstate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:backgroundTint="@android:color/white"
                        android:hint="State"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white" />



                    <EditText
                        android:fontFamily="@font/opensans_regular"
                        android:clickable="false"
                        android:id="@+id/tcity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:backgroundTint="@android:color/white"
                        android:hint="City"
                        android:inputType="text"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white" />

                      <EditText
                          android:fontFamily="@font/opensans_regular"
                        android:id="@+id/tphone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:backgroundTint="@android:color/white"
                        android:hint="Phone Number"
                        android:inputType="phone"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white" />


                </LinearLayout>

                <Button
                    android:fontFamily="@font/opensans_regular"
                    android:id="@+id/btn_done_step_two"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/white"
                    android:paddingLeft="50dp"
                    android:paddingTop="5dp"
                    android:paddingRight="50dp"
                    android:paddingBottom="5dp"
                    android:text="DONE"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="@+id/btn_back_step_two"
                    app:layout_constraintStart_toStartOf="@+id/btn_back_step_two"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

                <Button
                    android:fontFamily="@font/opensans_regular"
                    android:id="@+id/btn_back_step_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@android:color/black"
                    android:paddingLeft="60dp"
                    android:paddingTop="5dp"
                    android:paddingRight="60dp"
                    android:paddingBottom="5dp"
                    android:text="BACK"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_done_step_two" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


    </ScrollView>


</layout>